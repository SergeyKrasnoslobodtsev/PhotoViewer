<Page x:Class="PhotoViewer.App.Views.PhotoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:control="clr-namespace:PhotoViewer.App.Controls.SmoothPanel"
      xmlns:vm="clr-namespace:PhotoViewer.App.ViewModel"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:PhotoViewer.App.Views"
      mc:Ignorable="d" 
      DataContext="{Binding Photo, Source={StaticResource Locator}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PhotoPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PhotoViewer.App;component/Styles/MiniatureStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ControlTemplate x:Key="ItemsControlControlTemplate1" TargetType="{x:Type ItemsControl}">
                <ScrollViewer KeyboardNavigation.IsTabStop="True" CanContentScroll="True">
                    <ItemsPresenter SnapsToDevicePixels="True" />
                </ScrollViewer>
            </ControlTemplate>

        </ResourceDictionary>
    </Page.Resources>
    <DockPanel>
        <ItemsControl ItemsSource="{Binding PreferenceGroups}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto" Template="{DynamicResource ItemsControlControlTemplate1}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <control:SmoothPanel>
                        <control:SmoothPanel.Templates>
                            <control:SmoothPanelTemplate View="{x:Type local:GroupsThumbnail}" ViewModel="{x:Type vm:PreferenceGroup}" />
                        </control:SmoothPanel.Templates>
                    </control:SmoothPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </DockPanel>
</Page>
